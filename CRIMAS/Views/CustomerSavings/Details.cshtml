@model CRIMAS.Models.CustomerSavings

@{
    ViewBag.Title = "Credit Transaction details";
    Layout = "~/Views/Shared/_CashierLayoutPageWithCommonTasks.cshtml";

    string CustomerAccount = @Model.AccountNo.LastOrDefault().ToString();
}

<div class="card" style="width:70%; margin-left:auto; margin-right:auto;">
    <div class="card-content">
        <div class="card-title" style="color:black;">
            <img src="~/Images/ATM-01-WF.png" />    Credit Transaction details for account holder @Html.DisplayFor(model => model.AccountNo)            
        </div>
        <hr /><br />

        <div class="add-user-heading" style="padding-bottom: 20px;">

            <p style="color: green; font-size:16pt;">Account  <b>@Html.DisplayFor(model => model.AccountNo)</b> has successfully been credited with <b>₦@Html.DisplayFor(model => model.Credit)</b><b> (NGN)</b></p>

            <br /><p class="card-action">
                <a href="~/CustomerSavings/CheckAccount?accountno=@Model.AccountNo" class="btn btn-info">view account status</a>
                @{
                    if (User.IsInRole("Admin"))
                    {
                        <a href="~/Home/Admin/" class="btn btn-primary"><img src="~/Images/Home.png" />&nbsp;&nbsp;Take me home!</a><br />
                    }
                    else
                    {
                        <a href="~/Home/cashier" class="btn btn-primary"><img src="~/Images/Home.png" />&nbsp;&nbsp;Take me home!</a><br />
                    }
                }
            </p>
        </div>
        <br />
        <div style="padding-left: 20px; padding-right: 20px;">
            <label><b>Transaction details:</b></label>
            <table class="table table-stripped table-bordered">
                <tr style="background-color: #2A3333; color: whitesmoke">
                    <td>@Html.DisplayNameFor(model => model.DateCreated)</td>
                    <td>@Html.DisplayNameFor(model => model.AccountNo)</td>
                    <td>@Html.DisplayNameFor(model => model.Credit)</td>
                    <td>@Html.DisplayNameFor(model => model.Debit)</td>
                </tr>
                <tr>
                    <td>@DateTime.Now.ToString()</td>
                    <td><b>@Html.DisplayFor(model => model.AccountNo)</b></td>
                    <td><b>₦@Html.DisplayFor(model => model.Credit)</b><b>(NGN)</b></td>
                    <td><b>@Html.DisplayFor(model => model.Debit)</b></td>
                </tr>
            </table>

        </div>

    </div>
</div>