@{
    ViewBag.Title = "ERROR!";
    Layout = "~/Views/Shared/_CashierLayoutPageWithCommonTasks.cshtml";
}

<div class="card" style="width:70%; margin-left:auto; margin-right:auto;">
    <div class="card-content">
        
            <span class="card-title" style="color:black">
                <a href="~/" style="float:right;margin-right:25px;" class="btn btn-floating btn-large waves-effect waves-light blue"><img src="~/Images/Home.png" /></a>

                <img src="~/Images/Customer-small.png" style="padding-right: 20px;" />@ViewBag.ErrorTitle<hr />
            </span>
        
        <div class=" alert alert-error" style="padding-bottom:20px;">
            <img src="~/Images/Warning Message.png" /><strong>Heads up!</strong>
            <p>@ViewBag.ErrorDescription</p>
        </div>
    </div>
</div>