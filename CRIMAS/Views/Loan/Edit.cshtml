@model CRIMAS.Models.Loan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CashierLayoutPageWithCommonTasks.cshtml";
}



@using (Html.BeginForm())
{
    <span style="color: red">@Html.ValidationSummary()</span>
    <div class="subheading">
        <span>
            <img src="~/Images/Customer-small.png" style="padding-right: 20px;" />Edit Loan agreement</span>
    </div>
    <br />

    <div style="padding-left: 20px">

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.createdby)
      
        <table style="width: 90%; margin-left: auto; margin-right: auto;">
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080;">
                    <label style="font-weight: bold">&nbsp;&nbsp;Account no.</label>
                </td>
                <td>
                    <div class="input-prepend">
                        <span class="add-on">
                            <img src="~/Images/Customer-small.png" /></span>
                        @Html.TextBoxFor(model => model.AccountNo, new { @placeholder = "Enter customer's account no.", @style = "width:180px", @readonly = "readonly" })
                        @*@Html.ValidationMessageFor(model => model.AccountNo, string.Empty, new {@class="ValidationMessage" })*@
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080;">
                    <label style="font-weight: bold">&nbsp;&nbsp;Account holder.</label>
                </td>
                <td>
                    <div class="input-prepend">
                        <span class="add-on">
                            <img src="~/Images/Customer-small.png" /></span>
                        @Html.TextBoxFor(model => model.Customername, new { @placeholder = "Enter customer's account no.", @style = "width:250px", @readonly = "readonly" })
                        @*@Html.ValidationMessageFor(model => model.AccountNo, string.Empty, new {@class="ValidationMessage" })*@
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080;">
                    <label style="font-weight: bold">Amount</label>

                </td>
                <td>
                    <div class="input-prepend input-append">
                        <span class="add-on"><b>₦</b></span>
                        @Html.TextBoxFor(Model => Model.amount, string.Empty, new { @style = "width:140px", @placeholder = "specify amount" })
                        <span class="add-on"><b>K</b></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080;">
                    <label style="font-weight: bold">Duration</label>
                </td>
                <td>

                    <div class="input-append">
                        <input type="number" name="Duration" id="Duration" min="1" style="width: 60px" />
                        <span class="add-on">month(s)</span>
                    </div>
                    <div class="alert-small alert-success" style="padding-left: 20px; font-style: italic">
                        Initial duration was  @Html.DisplayFor(Model => Model.Duration) Month(s)
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080">
                    <label style="font-weight: bold">Date of commencement</label>
                </td>
                <td>
                    @*<div class="input-append date datepicker" data-date="@DateTime.Now.ToShortDateString()" data-date-format="dd-mm-yyyy">
                        <input id="DateOfCommencement" name="DateOfCommencement" class="span2" size="16" type="text" value="@DateTime.Now.ToShortDateString()" readonly/><span class="add-on" title="Click on the calendar to add a date."><img src="~/Images/Calendar.png" /></span>
                    </div>*@
                    <input type="date" name="DateOfCommencement" />
                    <div>
                        <div class="alert-small alert-danger" style="padding-left: 20px; font-style: italic">
                            Initial date was  @Html.DisplayFor(Model => Model.DateOfCommencement)
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align: right; padding: 10px; color: #808080">
                    <label style="font-weight: bold">Approved intrest rate</label>
                </td>
                <td>
                    <div>
                        @* @Html.EditorFor(model => model.InterestRate)    *@
                        <div class="input-append">
                            <input type="number" id="InterestRate" name="InterestRate" min="1" style="width: 50px" />
                            <span class="add-on">%</span>
                        </div>
                        <div class="alert-small alert-info" style="padding-left: 20px; font-style: italic">
                            Initial interest rate was  @Html.DisplayFor(Model => Model.InterestRate) %
                        </div>
                    </div>
                </td>
            </tr>
        </table>
     
        <br />
        <p style="text-align:center">
            <input type="submit" class="btn btn-success" style="padding: 13px" value="Save changes" />
            <a href="~/Loan/" class="btn btn-info">
                <img src="~/Images/Details View.png" />back to list</a>
        </p>
    </div>
    
}


