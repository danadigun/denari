<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CRIMAS-MPCS Ltd. Web Portal</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-narrow">
        <div class="masthead">
            @Html.Partial("_LoginPartial")
            <h3 class="muted">
                <img src="~/windows8_icons/User_Role/reviewer/reviewer-32.png" style="margin-right: 10px;" />@ViewBag.Title</h3>
        </div>
        <hr />
        <div class="dashHead">You are logged in as <b>@User.Identity.Name.ToString()</b></div>
        <div class="span10">
            <div class="span3">
                <div class="well" style="padding: 8px 0; border: 1px solid #C0C0C0;">
                    <ul class="nav nav-list">
                        <li class="nav-header">Admin Services</li>
                        <li class="active"><a href="#"><i class="icon-white icon-home"></i>Home</a></li>
                        @*<li><a href="#"><i class="icon-book"></i>Library</a></li>
                <li><a href="#"><i class="icon-pencil"></i>Applications</a></li>*@
                        <li class="nav-header">Profile Settings</li>
                        <li><a href="/Account/Register">
                            <img src="~/windows8_icons/Decisions/good_decision/good_decision-26.png" style="margin-right: 13px;" />Add new user</a></li>
                        <li><a href="#">
                            <img src="~/Images/glyphicons/png/glyphicons_137_cogwheels.png" style="margin-right: 10px;" />Settings</a></li>
                        @*<li> <img src="~/Images/glyphicons/png/glyphicons_137_cogwheels.png" style="margin-right:10px;" /> @Html.ActionButton("Settings", "Manage", "Account", "", " login-button-clearFix")</li>*@
                        <li class="divider"></li>
                        <li><a href="#">@*<img src="~/windows8_icons/System/help/help-26.png" style="margin-right:10px;" />*@Help</a></li>
                    </ul>
                </div>
            </div>
            <div class="span6" style="border-style: solid; border-color: AppWorkspace; border-width: 1px; min-height: 300px;">
                 @RenderBody()
            </div>
        </div>
        <div class="footer span10" style="margin-top: 5%">
            <hr />
            <p style="font-size: 9pt; text-align: center">&copy; CRIMAS MPCS Limited 2013. Designed & Engineered by <a href="#">Digital Forte Enterprise System.</a></p>
        </div>
        @* <div>
            @RenderBody()

        </div>      *@

    </div>
      @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>
