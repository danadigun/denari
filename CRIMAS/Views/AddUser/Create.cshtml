@model CRIMAS.Models.UserProfile

@{
    ViewBag.Title = "Add new user";
    Layout = "~/Views/Shared/_SecurityAndConfigurationLayoutPage.cshtml";
}

<div class="add-user-heading">
    <span style="float: right; padding-right: 20px"><a class="btn-small btn-primary" href="~/AddUser">view staff list</a></span>
    <p>+ Add new user to CRIMAS System</p>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
   
    <div class="add-user-content">
        <div class="subheading">
            <span>Employee's Personal Details Details</span>
        </div>
        <br />
        <div>
            <label><b>First name</b></label>
        </div>
        <div>
            @Html.EditorFor(m => m.FirstName)<br />
             @Html.ValidationMessageFor(model => model.FirstName, string.Empty, new { @Class = "ValidationMessage" })
        </div>
        <div>
            <label><b>Last name</b></label>
        </div>
        <div>
            @Html.EditorFor(m => m.LastName)<br />
             @Html.ValidationMessageFor(model => model.LastName, string.Empty, new { @Class = "ValidationMessage" })
        </div>
        <div>
            <label><b>Home address</b></label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Address, new {@style="width:380px" })<br />
             @Html.ValidationMessageFor(model => model.Address, string.Empty, new { @Class = "ValidationMessage" })
        </div>

        <div class="subheading">
            <span>Employee's Security Details</span>
        </div>
        <br />
        <div>
            <label><b>Employee's Designation</b></label>
        </div>
        <div>
        <select id="role" name="role">
            <option>Cashier</option>
            <option>Supervisor</option>
            <option>Manager</option>
            <option>Admin</option>
        </select>
        </div>
        <div>
            <label><b>Staff Id No.</b></label>
        </div>
        <div>
            @Html.EditorFor(model => model.UserName)<br />
            <span style="font-weight: normal; font-size: 8.5pt; font-style: italic; color: #808080;">Please note: this is staff login username</span><br />
            @Html.ValidationMessageFor(model => model.UserName, string.Empty, new { @Class = "ValidationMessage" })
        </div>

        <div>
            <label><b>Password</b></label>
        </div>
        <div>
            @Html.EditorFor(model => model.Password)<br />
            @Html.ValidationMessageFor(model => model.Password, string.Empty, new { @Class = "ValidationMessage" })
        </div>

        <div>
            <label><b>Confirm password</b></label>
        </div>
        <div>
            @Html.EditorFor(model => model.ConfirmPassword)<br />
            @Html.ValidationMessageFor(model => model.ConfirmPassword, string.Empty, new { @Class = "ValidationMessage" })
        </div>

        <p>
            <input class="btn btn-success" type="submit" value="Add employee to system." />
        </p>
    </div>
